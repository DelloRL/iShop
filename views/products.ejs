    <div class="section-products">
        <div class="title-subtitle">
            <h1>iPhone 12</h1>
        </div>
        <div class="container-products">

            <div class="product"> 
                <div class="img-contenedor">
                <img src="images/iphone12miniazul.png" alt="">
                </div>
                <h1>iPhone 12 mini</h1>
