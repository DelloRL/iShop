<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tu carrito</title>
    <link rel="stylesheet" href="/css/Carrito.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/header.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap');
    </style>
</head>

<body>

    <!-- Header -->
    <%- include('./partials/header') -%>


        <!--Main-->
        <main>
            <nav class="Seccion1">
                <h3 class="Titulo">Tu carrito iShop</h3>
                <a href="/home" class="fas fa-angle-double-left"></a>
            </nav>

            <nav class="Seccion2">
                <% let amount = 0; %>
                    <% if (products !='' ) { %>
                        <% products.forEach(product=> { %>
                            <div class="Producto">
                                <img src="images/products/<%= product.image %>" alt="" class="imagenProducto">
                                <p class="nameProduct"><%= product.name  %> </p>
                                <p class="priceProduct">Precio: <%= product.price  %>$ </p>
                                <a href="/products/deleteToCart/<% product.id %>" class="trash">
                                    <i class="close fas fa-trash style"></i>
                                </a>
                            </div>
                            <% amount +=Number(product.price) %>
                                <% }) %>
                                    <% } else { %>
                                        <h3 class="vacio">No hay productos en el carrito</h3>
                                        <% } %>
                                            <br>
            </nav>

            <p class="total">
                Total: 
                <span class="line">$<%= amount  %></span>
            </p> 


            <nav class="Seccion3">
                <div class="elegir-Pago">

                    <div class="Texto">
                        <p> Pagando al contado tenes hasta un </p>
                        <p class="descuento">15% de descuento!</p>
                    </div>

                </div>
            </nav>

            <nav class="botones">
                <div class="padreBotonP">
                    <button class="boton-Pagar">Pagar</button>
                </div>


            </nav>

        </main>

        <!-- Footer -->
        <%- include('./partials/footer') -%>

</body>

</html>